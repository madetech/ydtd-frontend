<!doctype html>
<!--[if IE 8]>         <html class="lt-ie10 lt-ie9"> <![endif]-->
<!--[if IE 9]>         <html class="lt-ie10 ie9"> <![endif]-->
<!--[if gt IE 9]><!--> <html> <!--<![endif]-->  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <% page_title = "Your Day Their Day" %>
    <% page_title = "#{current_page.data.title} | #{page_title}" if current_page.data.title %>
    <title><%= page_title %></title>

    <meta name="description" content="<%= current_page.data.meta_description || '' %>">
    <meta name="keywords" content="<%= current_page.data.meta_keywords || '' %>">

    <script>
      var meta = document.createElement("meta"); meta.setAttribute('name', 'viewport');
      if (/mobile/i.test(navigator.userAgent) && navigator.userAgent.match(/iPad/i) == null) {
        meta.setAttribute('content', 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no');
      } else if (navigator.userAgent.match(/iPad/i)) {
        meta.setAttribute('content', 'maximum-scale=1');
      } else {
        meta.setAttribute('content', '');
      }
      document.getElementsByTagName('head')[0].appendChild(meta);
    </script>

    <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", "all" %>
    <%= stylesheet_link_tag "//cloud.typography.com/6902032/784442/css/fonts.css", "all" %>
    <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" %>
    <script>
      (typeof(window.jQuery) == 'undefined') ? document.write('<%= js_escape_html(javascript_include_tag("jquery.min")) %>'): '';
    </script>

    <script>
      var meta = document.createElement("meta"); meta.setAttribute('name', 'viewport');
      if (/mobile/i.test(navigator.userAgent) && navigator.userAgent.match(/iPad/i) == null) {
        meta.setAttribute('content', 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no');
      } else if (navigator.userAgent.match(/iPad/i)) {
        meta.setAttribute('content', 'maximum-scale=1');
      } else {
        meta.setAttribute('content', '');
      }
      document.getElementsByTagName('head')[0].appendChild(meta);
    </script>

    <%= javascript_include_tag "modernizr", "plugins", "all" %>
  </head>

  <body class="<%= "#{page_classes} #{current_page.data.body_class}" %>" itemscope itemtype="http://schema.org/<%= current_page.data.schema || 'WebPage' %>">
    <%= yield %>
  </body>
</html>
