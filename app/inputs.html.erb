---
title: Form inputs
---

<form class="modal">
  <fieldset class="modal--content">
    <legend>Radio Buttons:</legend>
    <div class="radio-wrap">
      <span class="radio">
        <input type="radio" id="radio1" name="ydtd-radio" value="selected" />
        <label for="radio1">Example Label</label>
      </span>

      <span class="radio">
        <input type="radio" id="radio2" name="ydtd-radio" value="clear" />
        <label for="radio2">Example Label</label>
      </span>

      <span class="radio">
        <input type="radio" id="radio3" name="ydtd-radio" value="error" class="error" />
        <label for="radio3">Example Label</label>
      </span>
    </div>
  </fieldset>

  <fieldset class="modal--content">
    <legend>Checkboxes:</legend>

    <div class="checkbox-wrap">
      <span class="checkbox">
        <input type="checkbox" id="checkbox1" name="ydtd-checkbox" value="selected" />
        <label for="checkbox1">Example Label</label>
      </span>

      <span class="checkbox">
        <input type="checkbox" id="checkbox2" name="ydtd-checkbox" value="clear" />
        <label for="checkbox2">Example Label</label>
      </span>

      <span class="checkbox">
        <input type="checkbox" id="checkbox3" name="ydtd-checkbox" value="error" class="error" />
        <label for="checkbox3">Example Label</label>
      </span>
    </div>
  </fieldset>

  <fieldset class="modal--content">
    <legend>Text Inputs:</legend>
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="first-name" />

    <label for="surname">Surname:</label>
    <input type="text" id="surname" name="surname" class="error" />

    <label for="first-name">Bio:</label>
    <textarea id="bio" name="bio"></textarea>

    <legend>Selects:</legend>
    <select id="country">
      <option value="united-states">United States</option>
      <option value="united-kingdom">United Kingdom</option>
      <option value="afghanistan">Afghanistan</option>
      <option value="aland-islands">Aland Islands</option>
      <option value="albania">Albania</option>
      <option value="algeria">Algeria</option>
      <option value="american-samoa">American Samoa</option>
    </select>

    <select multiple id="country_alt">
      <option value="united-states">United States</option>
      <option value="united-kingdom">United Kingdom</option>
      <option value="afghanistan">Afghanistan</option>
      <option value="aland-islands">Aland Islands</option>
      <option value="albania">Albania</option>
      <option value="algeria">Algeria</option>
      <option value="american-samoa">American Samoa</option>
    </select>
  </fieldset>
</form>
