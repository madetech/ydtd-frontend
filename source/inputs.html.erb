<form>
  <fieldset>
    <legend>Radio Buttons:</legend>
    <input type="radio" name="ydtd-radio" value="selected" />
    <input type="radio" name="ydtd-radio" value="clear" />
    <input type="radio" name="ydtd-radio" value="error" class="error" />

    <legend>Checkboxes:</legend>
    <input type="checkbox" name="ydtd-checkbox" value="selected" />
    <input type="checkbox" name="ydtd-checkbox" value="clear" />
    <input type="checkbox" name="ydtd-checkbox" value="error" class="error" />

    <legend>Text Inputs:</legend>
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="first-name" />

    <label for="surname">Surname:</label>
    <input type="text" id="surname" name="surname" class="error" />

    <legend>Buttons:</legend>
    <input type="button" name="login" value="Login" />
    <input type="button" name="cancel" value="Cancel" class="disabled"/>
  </fieldset>
</form>